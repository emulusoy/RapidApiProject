@model CreateViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Yeni Öğe Oluştur</title>
	<link href="/css/emucreate.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar">
        <div class="navbar-links">
            <a href="/Movie/Index/" class="navbar-brand @(ViewContext.RouteData.Values["controller"].ToString() == "Movie" ? "active-nav-link" : "")">Movies</a>
            <a href="/Series/Index/" class="navbar-brand @(ViewContext.RouteData.Values["controller"].ToString() == "Series" ? "active-nav-link" : "")">Series</a>
            <a href="/Game/Index/" class="navbar-brand @(ViewContext.RouteData.Values["controller"].ToString() == "Game" ? "active-nav-link" : "")">Games</a>
            <a href="/Create/Index/" class="navbar-brand @(ViewContext.RouteData.Values["controller"].ToString() == "Create" ? "active-nav-link" : "")">Create</a>
        </div>
    </div>

    <div class="container">
        <h1>Yeni Öğe Ekle</h1>
        @* Formu CreateController'ın Index aksiyonuna gönderiyoruz *@
        <form asp-controller="Create" asp-action="Index" method="post">
            <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

            <div class="form-group">
                <label asp-for="SelectedType">Select Type:</label>
                <select asp-for="SelectedType" asp-items="Model.Types">
                    <option value="">-- Lütfen bir tür seçin --</option>
                </select>
                <span asp-validation-for="SelectedType" class="field-validation-error"></span>
            </div>

            <div class="form-group">
                <label asp-for="Title">Title:</label>
                <input type="text" asp-for="Title" />
                <span asp-validation-for="Title" class="field-validation-error"></span>
            </div>

            <div class="form-group">
                <label asp-for="Image">Image URL:</label>
                <input type="url" asp-for="Image" />
                <span asp-validation-for="Image" class="field-validation-error"></span>
            </div>

            <div class="form-group">
                <label asp-for="Rating">Point (0-10):</label>
                <input type="text" asp-for="Rating" />
                <span asp-validation-for="Rating" class="field-validation-error"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description">Description:</label>
                <textarea asp-for="Description"></textarea>
                <span asp-validation-for="Description" class="field-validation-error"></span>
            </div>

            <div class="form-check">
                <input type="checkbox" asp-for="Watched" />
                <label asp-for="Watched">Watched/Played?</label>
            </div>

            <button type="submit" class="btn-submit">Add</button>
        </form>
        <a href="/Movie/Index" class="back-link">Back List</a> @* Ana listeye dönüş linki *@
    </div>
</body>
</html>