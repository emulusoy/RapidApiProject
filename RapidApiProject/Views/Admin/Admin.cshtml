@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Admin Panel -  Film Dizi Oyun</title>
    <link href="/css/emu.css" rel="stylesheet" />
    <link href="/css/admin.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar">
        <div class="navbar-links">
            <a href="/Movie/Index/" class="navbar-brand">Movies</a>
            <a href="/Series/Index/" class="navbar-brand">Series</a>
            <a href="/Game/Index/" class="navbar-brand">Games</a>
            <a href="/Create/Index/" class="navbar-brand">Create</a>
            <a href="/Admin/Index/" class="navbar-brand active-nav-link">Admin</a>
        </div>
    </div>

    <h1 class="titlePage">| Admin Panel |</h1>

    <div class="admin-layout-container">
        <aside class="admin-sidebar">
            <nav class="admin-sidebar-nav">
                <a href="/Admin/Index" class="admin-nav-item active">
                    <i class="fas fa-tachometer-alt"></i> Dashboard
                </a>
                <a href="/Admin/ListMovies" class="admin-nav-item">
                    <i class="fas fa-film"></i> Movies
                </a>
                <a href="/Admin/ListSeries" class="admin-nav-item">
                    <i class="fas fa-tv"></i> Series
                </a>
                <a href="/Admin/ListGames" class="admin-nav-item">
                    <i class="fas fa-gamepad"></i> Games
                </a>
                <a href="/Admin/ListUsers" class="admin-nav-item">
                    <i class="fas fa-users-cog"></i> Users
                </a>
                <div class="sidebar-divider"></div>
                <a href="/Admin/Settings" class="admin-nav-item">
                    <i class="fas fa-cogs"></i> Settings
                </a>
            </nav>
        </aside>

        <main class="admin-main-content">
            <div class="content-header">
                <h2>Admin Dashboard</h2>
                <p>Genel sistem istatistiklerine ve hızlı erişim bağlantılarına buradan ulaşabilirsiniz.</p>
            </div>

            <div class="dashboard-widgets-grid">
                <div class="widget-card">
                    <h3>Toplam İçerik</h3>
                    <p class="widget-value">3420</p>
                </div>
                <div class="widget-card">
                    <h3>Yeni Kayıtlar (Son 30 Gün)</h3>
                    <p class="widget-value">215</p>
                </div>
                <div class="widget-card">
                    <h3>En Çok Görüntülenen</h3>
                    <p class="widget-value"><i class="fas fa-fire" style="color: orange;"></i> The Last of Us</p>
                </div>
                <div class="widget-card">
                    <h3>Kullanıcı Etkileşimi</h3>
                    <div class="progress-bar-container">
                        <div class="progress-bar" style="width: 75%;"></div>
                        <span>%75</span>
                    </div>
                </div>
            </div>

            <div class="chart-section">
                <h3>İçerik Türlerine Göre Dağılım</h3>
                <div class="pie-chart-container">
                    <div class="pie-segment" style="--value: 40; --value1:0; background-color: #ff6f61;">
                        <span>Movies (40%)</span>
                    </div>
                    <div class="pie-segment" style="--value: 30; --value1:40; background-color: #007bff;">
                        <span>Series (30%)</span>
                    </div>
                    <div class="pie-segment" style="--value: 30; --value1:70; background-color: #4CAF50;">
                        <span>Games (30%)</span>
                    </div>
                </div>
                <div class="pie-chart-legend">
                    <div class="legend-item"><span class="legend-color-box" style="background-color: #ff6f61;"></span> Movies</div>
                    <div class="legend-item"><span class="legend-color-box" style="background-color: #007bff;"></span> Series</div>
                    <div class="legend-item"><span class="legend-color-box" style="background-color: #4CAF50;"></span> Games</div>
                </div>
            </div>

            <div class="chart-section">
                <h3>Aylık Yeni Kayıtlar</h3>
                <div class="bar-chart-container">
                    <div class="bar" style="--bar-height: 60%;" data-label="Ocak"></div>
                    <div class="bar" style="--bar-height: 80%;" data-label="Şubat"></div>
                    <div class="bar" style="--bar-height: 70%;" data-label="Mart"></div>
                    <div class="bar" style="--bar-height: 90%;" data-label="Nisan"></div>
                    <div class="bar" style="--bar-height: 75%;" data-label="Mayıs"></div>
                    <div class="bar" style="--bar-height: 85%;" data-label="Haziran"></div>
                </div>
            </div>

            <div class="admin-action-area">
                <a href="/Admin/CreateMovie" class="add-new-button">Yeni Film Ekle <i class="fas fa-plus-circle"></i></a>
                <a href="/Admin/CreateSeries" class="add-new-button">Yeni Dizi Ekle <i class="fas fa-plus-circle"></i></a>
                <a href="/Admin/CreateGame" class="add-new-button">Yeni Oyun Ekle <i class="fas fa-plus-circle"></i></a>
            </div>
        </main>
    </div>
</body>
</html>