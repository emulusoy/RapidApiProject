@* Views/Planner/Focus.cshtml *@
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Planner · 3 Gün Odak";
}

<section class="py-6">
    <div class="flex items-center justify-between">
        <h1 class="text-2xl font-bold tracking-tight">3 Gün Odak</h1>
        <div class="flex items-center gap-2">
            <a href="@Url.Action("Index","Planner")" class="px-3 py-2 rounded-xl border border-gray-200 dark:border-gray-800 hover:bg-gray-100 dark:hover:bg-gray-800">Ay Takvimi</a>
            <select id="focusMode" class="px-3 py-2 rounded-xl border border-gray-200 dark:border-gray-800">
                <option value="next" selected>Bugün + Sonraki 2 Gün</option>
                <option value="prev">Son 3 Gün</option>
            </select>
        </div>
    </div>

    <div id="focusColumns" class="mt-6 grid gap-6 sm:grid-cols-2 lg:grid-cols-3">@* JS *@</div>
</section>

@section Scripts {
    <script src="~/js/planner.js" asp-append-version="true"></script>
}
