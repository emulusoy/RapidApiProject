@model (int currentPage, int totalPages, string currentFilter)

@{
    int currentPage = Model.currentPage;
    int totalPages = Model.totalPages;
    string currentFilter = Model.currentFilter;
}

<div class="pagination">
    <a href="@(currentPage > 1 ? $"?page={currentPage - 1}&filter={currentFilter}" : "#")" class="@(currentPage == 1 ? "disabled" : "")">Previous</a>

    @for (int i = 1; i <= totalPages; i++)
    {
        <a href="?page=@i&filter=@currentFilter" class="@(i == currentPage ? "active" : "")">@i</a>
    }

    <a href="@(currentPage < totalPages ? $"?page={currentPage + 1}&filter={currentFilter}" : "#")" class="@(currentPage == totalPages ? "disabled" : "")">Next</a>
</div>