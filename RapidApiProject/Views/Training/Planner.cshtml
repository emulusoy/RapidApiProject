@model TrainingPlannerVM
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    string fmt(DateTime d) => d.ToString("yyyy-MM-dd");
    var prev = Model.WeekStart.AddDays(-7);
    var next = Model.WeekStart.AddDays(7);
}

<section class="py-6">
    <div class="mx-auto max-w-7xl grid gap-6 lg:grid-cols-12">

        <!-- Sol panel: Egzersiz arama + hazır şablonlar -->
        <aside class="lg:col-span-4 xl:col-span-3">
            <div class="rounded-2xl border border-gray-200 dark:border-gray-800 bg-white dark:bg-gray-900 p-4 sticky top-20 space-y-5">

                <div>
                    <h2 class="font-semibold mb-2">Egzersiz Ekle</h2>
                    <div class="flex gap-2">
                        <input id="q" placeholder="Ara (örn: press, row...)"
                               class="w-full rounded-xl border border-gray-300 dark:border-gray-700 bg-transparent px-3 py-2 text-sm">
                        <button id="btnSearch" class="px-3 py-2 rounded-xl border border-gray-200 dark:border-gray-800">Ara</button>
                    </div>
                    <div class="mt-2 flex items-center gap-2 text-xs">
                        <select id="region" class="rounded-lg border border-gray-300 dark:border-gray-700 bg-transparent px-2 py-1">
                            <option value="">Bölüm (tümü)</option>
                            <option value="chest">Göğüs</option>
                            <option value="back">Sırt</option>
                            <option value="shoulders">Omuz</option>
                            <option value="arms">Kol</option>
                            <option value="legs">Bacak</option>
                            <option value="abs">Karın</option>
                            <option value="glutes">Kalça</option>
                        </select>
                        <span class="opacity-60">• Sonuçtan sağdaki gün butonuyla ekle</span>
                    </div>

                    <ul id="results" class="mt-3 divide-y divide-gray-100 dark:divide-gray-800 max-h-80 overflow-auto">
                        <li class="py-3 text-sm text-gray-500 dark:text-gray-400">Arama yap.</li>
                    </ul>
                </div>

                <div>
                    <h2 class="font-semibold mb-2">Hazır Programlar</h2>
                    <div class="grid grid-cols-2 gap-2">
                        <button class="tpl px-3 py-2 rounded-xl border border-gray-200 dark:border-gray-800" data-tpl="fullbody-3">Full Body (3)</button>
                        <button class="tpl px-3 py-2 rounded-xl border border-gray-200 dark:border-gray-800" data-tpl="ppl">Push • Pull • Legs</button>
                        <button class="tpl px-3 py-2 rounded-xl border border-gray-200 dark:border-gray-800" data-tpl="upper-lower">Upper • Lower</button>
                    </div>
                    <p class="mt-2 text-xs text-gray-500 dark:text-gray-400">Seçtiğinde bu haftanın günlerine otomatik dağılır.</p>
                </div>

            </div>
        </aside>

        <!-- Sağ panel: Haftalık plan -->
        <main class="lg:col-span-8 xl:col-span-9">
            <div class="rounded-2xl border border-gray-200 dark:border-gray-800 bg-white dark:bg-gray-900 p-4 sm:p-6">

                <div class="flex items-center justify-between">
                    <div class="flex items-center gap-2">
                        <a class="px-3 py-2 rounded-xl border border-gray-200 dark:border-gray-800"
                           href="@Url.Action("Planner", new { start = fmt(prev) })">‹ Önceki</a>
                        <a class="px-3 py-2 rounded-xl border border-gray-200 dark:border-gray-800"
                           href="@Url.Action("Planner")">Bu Hafta</a>
                        <a class="px-3 py-2 rounded-xl border border-gray-200 dark:border-gray-800"
                           href="@Url.Action("Planner", new { start = fmt(next) })">Sonraki ›</a>
                    </div>
                    <div class="text-sm opacity-80 font-medium">
                        @Model.WeekStart.ToString("dd MMMM yyyy", new System.Globalization.CultureInfo("tr-TR"))
                        – @Model.WeekStart.AddDays(6).ToString("dd MMMM yyyy", new System.Globalization.CultureInfo("tr-TR"))
                    </div>
                </div>

                <div class="mt-6 grid gap-4 md:grid-cols-2 xl:grid-cols-3">
                    @foreach (var d in Model.Days)
                    {
                        <section class="rounded-2xl border border-gray-200 dark:border-gray-800 p-3">
                            <header class="flex items-center justify-between">
                                <div>
                                    <div class="font-semibold">@d.Title</div>
                                    <div class="text-xs opacity-70">@d.Date:dd.MM.yyyy</div>
                                </div>
                                <div class="flex items-center gap-1">
                                    <!-- Hızlı ekleme: bu güne ekle -->
                                    <button class="add-here px-2 py-1 rounded-lg border border-gray-200 dark:border-gray-800 text-xs"
                                            data-day="@d.DayId">
                                        Bu güne ekle
                                    </button>
                                </div>
                            </header>

                            <ul class="mt-3 space-y-2" id="day-@d.DayId">
                                @if (d.Items.Count == 0)
                                {
                                    <li class="text-sm text-gray-500 dark:text-gray-400">Egzersiz eklenmemiş.</li>
                                }
                                @foreach (var it in d.Items)
                                {
                                    <li class="group rounded-xl border border-gray-200 dark:border-gray-800 p-2 flex items-center justify-between">
                                        <div class="min-w-0">
                                            <div class="font-medium truncate">@it.ExerciseName</div>
                                            <div class="text-xs opacity-70">
                                                @(it.Sets?.ToString() ?? "—") x @(string.IsNullOrWhiteSpace(it.Reps) ? "—" : it.Reps)
                                                · Dinlen: @(it.RestSec?.ToString() ?? "—") sn
                                            </div>
                                        </div>
                                        <div class="flex items-center gap-1">
                                            <a class="px-2 py-1 rounded-lg border border-gray-200 dark:border-gray-800 text-xs"
                                               href="@Url.Action("Detail","Exercise", new { id = it.ExerciseId })" title="Detay">Detay</a>
                                            <button class="del px-2 py-1 rounded-lg border border-rose-200 text-rose-600 dark:border-rose-900/60 text-xs"
                                                    data-id="@it.ItemId" title="Sil">
                                                Sil
                                            </button>
                                        </div>
                                    </li>
                                }
                            </ul>
                        </section>
                    }
                </div>
            </div>
        </main>
    </div>
</section>
@section Scripts {
    <script>
        window.TrainingCfg = {
            programId: @Model.ProgramId,
            urls: {
                search: '@Url.Action("SearchExercises", "Training")',
                add:    '@Url.Action("AddItem", "Training")',
                remove: '@Url.Action("RemoveItem", "Training")',
                apply:  '@Url.Action("ApplyTemplate", "Training")'
            }
        };
    </script>

    <script src="~/js/training-planner.js" asp-append-version="true"></script>
}

